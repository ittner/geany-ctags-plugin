pkgname=geanydoc
pkgver=VERSION
pkgrel=1
pkgdesc="Plugin for Geany IDE that execute specified commands for the word at the cursor"
arch=(i686 x86_64)
url="http://geany-plugins.sourceforge.net/geanydoc/"
license=("GPL3")
depends=('geany>=0.16')
makedepends=('intltool')
conflicts=()
replaces=()
backup=()
install=
source=(http://users.cosmostv.by/yurand/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr || return 1
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
}
